@model MvcProjectTest.Models.CustomerDetail
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_BackStageLayout.cshtml";
}

@Styles.Render("~/Back-css/BackCustomerDetails")

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>會員明細</h3>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-xs-12">

            <div class="x_panel">
                <div class="x_title">
                    <h2>會員基本資訊<a href='@Url.Action("CustomerIndex","BackStage",null)'><small>Back to list</small></a></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />

                    <!-- start form for validation -->
                    <!-- 撈資料庫的 -->

                    <div class="form-horizontal form-label-left">

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="CustomerAccount">
                                會員帳號
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <p type="text" id="CustomerAccount" class="control-label col-md-7 col-xs-12" style="text-align: left;">
                                    @Model.Customer.CustomerAccount
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="CuctomerName">
                                會員姓名
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <p type="text" id="CuctomerName" class="control-label col-md-7 col-xs-12" style="text-align: left;">
                                    @Model.Customer.CustomerName
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="EmailConfirmed">
                                Email認證
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <p type="text" id="EmailConfirmed" class="control-label col-md-7 col-xs-12" style="text-align: left;">
                                    @Model.Customer.EmailConfirmed
                                </p>
                            </div>
                        </div>
                        @{
                            var count = 0;
                            decimal sum = 0;
                            if (Model.OrderCount != null)
                            {
                                count = Model.OrderCount.Count;
                                sum = Model.OrderCount.Sum;
                            }
                        }
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="OrderCount">
                                訂單筆數
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <p type="text" id="OrderCount" class="control-label col-md-7 col-xs-12"
                                   style="text-align: left;">@count</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="OrderTotal">
                                消費總額
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <p type="text" id="OrderTotal" class="control-label col-md-7 col-xs-12" style="text-align: left;">
                                    @sum
                                </p>
                            </div>
                        </div>
                        @*<div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="UnitPrice">
                                    UnitPrice
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <p type="text" id="UnitPrice" class="control-label col-md-7 col-xs-12"
                                       style="text-align: left;">這是一本書的價錢</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="InStock">
                                    InStock
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <p type="text" id="InStock" class="control-label col-md-7 col-xs-12" style="text-align: left;">
                                        這是一本書的庫存
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
