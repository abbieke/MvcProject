@using System.Diagnostics.Eventing.Reader
@using System.Security.Cryptography.X509Certificates
@model IEnumerable<MvcProjectTest.Models.Order>
@{
    ViewBag.Title = "OrderIndex";
    Layout = "~/Views/Shared/_BackStageLayout.cshtml";
}

@Styles.Render("~/Back-css/BackCustomerIndex")
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>訂單管理系統</h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>訂單總覽</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li class="dropdown" style="visibility: hidden;">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li> 
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>OrderID</th>
                                <th>OrderNo</th>
                                <th>CustomerName</th>
                                <th>OrderDate</th>
                                <th>PayWay</th>
                                <th>TotalPrice</th>
                                <th>Recipient</th>
                                <th>RecipientAddress</th>
                                <th>OrderStatus</th>
                                <th>Action</th>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var item in Model)
                            {
                                string status = "";
                                DateTime fullTime = new DateTime(1, 1, 1, 0, 0, 0);

                                    if (item.SetUp == fullTime)
                                    {
                                        status = "訂單未完成";

                                    }
                                    else if ( item.Preparation == fullTime)
                                    {
                                        status = "訂單成立";
                                    }
                                    else if ( item.Delivery == fullTime)
                                    {
                                        status = "出貨準備中";
                                    }
                                    else if ( item.PickUp == fullTime)
                                    {
                                        status = "宅配中";
                                    }
                                    else if ( item.CompletePickup == fullTime)
                                    {
                                        status = "待取貨";
                                    }
                                    else if ( item.TransactionComplete == fullTime)
                                    {
                                        status = "取貨完成";
                                    }
                                    else
                                    {
                                        status = "交易完成";
                                    }


                                <tr>
                                    <td>@item.OrderID</td>
                                    <td>@item.OrderNo</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.PayWay</td>
                                    <td>@item.DeliveryMethod</td>
                                    <td>@item.Recipient</td>
                                    <td>@item.RecipientAddress</td>
                                    <td>@status</td>
                                    <td style="text-align: center">
                                        <a href="OrderDetails.html" type="button" class="btn btn-info btn-xs">明細</a>
                                        <a href='@Url.Action("OrderEdit","BackStage",new{ id = item.OrderID})' type="button" class="btn btn-warning btn-xs">修改</a>
                                        <!-- <a href="OrderDelete.html" type="button" class="btn btn-danger btn-xs">刪除</a> -->
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Back-Script/BackCustomerIndex")

