@using MvcProjectTest.Models
@model Mix

@{
    ViewBag.Title = "新知書櫥";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.cardIndex = 0;
}

@Styles.Render("~/css/indexView")

<div class="index-body">
    <div class="index-bigimage-box">
        <div class="container">
            <div class="bigimage-detail">
                <span class="header-text">每日一書，新知書櫥</span>
                <span class="center-text">New Knowledge Bookcase</span>
                <span class="bottom-text">
                    Become your Bookcase, read everyday, persistent study each day.
                </span>
                <a href='@Url.Action("AboutUs","Home",null)' class="shop-button">About Us</a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="newest-tab-block">
            <h1 class="newest-tab-title-h1">
                SpotLight
            </h1>
            <div id="newest-tab">
                <div class="newest-tab-title-row-block">
                    <ul class="newest-tab-title-row" id="a1">
                        <li class="newest-tab-title-li">
                            <a href="#tab-new-arrival" class="newest-tab-text">
                                New
                                Arrival
                            </a>
                        </li>
                        <li class="newest-tab-title-li">
                            <a href="#tab-random" class="newest-tab-text">
                                Random
                                Recommand
                            </a>
                        </li>
                        <li class="newest-tab-title-li">
                            <a href="#tab-best-sell" class="newest-tab-text">
                                Best
                                Sell
                            </a>
                        </li>
                    </ul>
                </div>

                <div id="tab-new-arrival" class="tab-inner">

                    <!-- 內容區 系統塞商品 -->
                    @foreach (var item in Model.Books)
                    {
                        ViewBag.cardIndex++;
                        @Html.Partial("_ProductCardPartial", item)
                    }
                </div>


                <!-- tab2 -->
                <div id="tab-random" class="tab-inner">
                    @foreach (var item in Model.SecBooks)
                    {
                        ViewBag.cardIndex++;
                        @Html.Partial("_ProductCardPartial", item)
                    }
                </div>


                <!-- tab3 -->
                <div id="tab-best-sell" class="tab-inner">
                    @foreach (var item in Model.ThirdBooks)
                    {
                        ViewBag.cardIndex++;
                        @Html.Partial("_ProductCardPartial", item)
                    }
                </div>
            </div>
        </div>





    </div>

    <div class="index-blog">
        <div class="container">
            <div class="flex index-blog-column">
                <div class="index-block-left">
                    <a href="#" class="block-banner">
                        <img src="~/Assets/Images/@Model.TopAuthor.CategoryEngName/@Model.TopAuthor.BookImage"
                             alt="">
                    </a>
                    <div class="index-block-inner">
                        @*<span class="banner-title">Apple</span>
                        <span class="banner-desc">happy day</span>
                        <a href="#" class="banner-button">buy now</a>*@
                    </div>
                </div>
                <div class="index-block-right">
                    <div class="block-right-image">
                        <img src="https://randomuser.me/api/portraits/men/97.jpg" alt="">
                    </div>
                    <div class="block-right-text">
                        <div class="flex">
                            @*<span class="icon-image">
                                <img src="https://demoprestashop.aeipix.com/AX04/mybook75/modules/aei_cmstestimony/views/img/icon.png"
                                     alt="">
                            </span>*@
                            <div class="text-right">
                                <div class="top-text">@Model.TopAuthor.AuthorName</div>
                                <div class="end-text">@Model.TopAuthor.BooksName</div>
                            </div>
                        </div>

                        <div class="desc">
                            <p>
                                We recommend this book.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="function-button-block">
        <div class="container">
            <div class="service-block">
                <ul>
                    <li class="first-block principle-out-block">
                        <div class="function-button-inner">
                            <span class="blockleft">
                                <a href="#" class="blockleft-images-one"></a>
                            </span>
                            <span class="blockright">
                                <a href="#" class="aei-service-title">Fast transportation</a>
                                <span class="aei-service-desc">Arrival within 24 hours</span>
                            </span>
                        </div>
                    </li>
                    <li class="second-block principle-out-block">
                        <div class="function-button-inner">
                            <span class="blockleft">
                                <a href="#" class="blockleft-images-two"></a>
                            </span>
                            <span class="blockright">
                                <a href="#" class="aei-service-title">Quality customer service</a>
                                <span class="aei-service-desc">Line Bot</span>
                            </span>
                        </div>
                    </li>
                    <li class="third-block principle-out-block">
                        <div class="function-button-inner">
                            <span class="blockleft">
                                <a href="#" class="blockleft-images-three"></a>
                            </span>
                            <span class="blockright">
                                <a href="#" class="aei-service-title">Cheaper than other stores</a>
                                <span class="aei-service-desc">Always on sale</span>
                            </span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@section topCss{
    <link href="~/Assets/Css/index-block.css" rel="stylesheet" />
    <link href="~/Assets/Css/item-quick-look.css" rel="stylesheet" />
    <link href="~/Assets/Css/override-jquery-ui-dialog.css" rel="stylesheet" />
    <link href="~/Assets/Css/newest-tab-block.css" rel="stylesheet" />
}
